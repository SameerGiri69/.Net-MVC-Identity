@model IEnumerable<ToDo>


@foreach (var item in Model)
{

    <div class="col-md-4">
        <div class="card mb-4 box-shadow">
            <img class="card-img-top" src=@item.ImageUrl alt="Card image cap">
            <div class="card-body">
                <p class="card-text">@item.Title</p>
                <p class="card-text">@item.Description</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a type="btn-success" asp-controller="ToDo" asp-action="Detail" asp-route-id=@item.Id type="button" class="btn btn-sm btn-outline-secondary">View</a>
                        <a type="btn-success" asp-controller="ToDo" asp-action="Update" asp-route-id=@item.Id type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a type="btn-success" asp-controller="ToDo" asp-action="Delete" asp-route-id=@item.Id type="button" class="btn btn-sm btn-outline-secondary">Delete</a>

                    </div>
                    Deadline: <span>@item.Deadline</span>

                </div>
            </div>
        </div>
    </div>
}
